<%- include("./partials/head")%>
  <%- include("./partials/header")%>

<main id="container-main-login">
  <section id="container-form-login">
    <div class="title-section title-section-login">
      <h2>Login</h2>
      <% if(locals.error){ %>
        <p class="error-alert"><%= error.message %></p>
        <% } %>
    </div>
    <form action="/login" method="post">
      <div class="input-field-login">
        <input type="email" name="email" id="email" placeholder="Digite seu e-mail" required>
        <div class="underline"></div>
      </div>
      <div class="input-field-login">
        <input type="password" name="senha" id="password" placeholder="Digite sua senha" required>
        <div class="underline"></div>
      </div>
      <div class ="container-checkon">
        <input type = "checkbox" name ="agree" id = "agree-id">
        <label for = "agree-id">Salvar informações do login</label> 
      </div>
      <div class="btn-edit">
        <button type= "submit" class="btn-edit-login">Entrar</button>
      </div>
      <div class="container-do-register">
        <a href="/registro" class="underline-hover">Não tem cadastro? Crie uma conta.</a>
      </div>
    </form>
  </section>

      <%- include("./partials/footer")%>