<header>
    <div id="top-bar" class="col-12">
        <p>Utilize o cupom CAFEHOUSE e ganhe 5% OFF na primeira compra</p>
    </div>
    <nav class="container-nav navbar navbar-expand-md navbar-dark col-3 col-md-6 col-xl-8">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link mt-3 mt-md-0" href="/produtos">Produtos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/sobre">Sobre Nós</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/blog">Blog</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/contato">Contato</a>
                    </li>
                    <% if (locals.user) { %>
                        <div class="divider d-md-none"></div>
                        <li class="nav-item d-md-none">
                            <a href="/area-do-cliente" class="nav-link">Minha conta</a>
                        </li>
                        <form class="py-2 d-md-none" action="/logout" method="POST">
                            <button type="submit" class="nav-item" id="btn-logout-user">Sair</button>
                        </form>

                    <% }else{ %>   
                        <li class="nav-item d-md-none">
                            <a href="/login" class="nav-link">Login</a>
                        </li>
                    <% } %> 
                </ul>
            </div>
        </div>
    </nav>
    <div id="brand" class="container-nav col-6 col-md-3 col-xl-2">
        <a href="/">CAFÉ HOUSE</a>
    </div>
    <div id="login" class="container-nav col-md-2 col-xl-1">
        <% if (locals.user) { %>
            <div class="dropdown">
                <a class="btn dropdown-toggle" id="btn-hello-user" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    Olá, <%= user.nome %>
                </a>
                <div class="dropdown-menu">
                    <form class="px-2 py-2" action="/logout" method="POST">
                        <a class="dropdown-item" href="/area-do-cliente">Minha conta</a></li>
                        <button type="submit" class="dropdown-item">Sair</button>
                    </form>
                </div>
            </div>           
        <% }else{ %>
            <a href="/login">
                <img src="/img/person.svg" alt="Login">
            </a>
        <% } %>
    </div>
    <div id="basket" class="container-nav col-3 col-md-1">
        <a href="/carrinho">
            <img src="/img/basket.svg" alt="Minha sacola">
        </a>
    </div>
    <section id="searchbar" class="col-12">
        <form action="" method="" class="col-12">
            <input type="text" name="search" id="search" class="col-10" placeholder="O que você procura?" required>
            <button type="submit" class="col-2">
                <img src="/img/search.svg" alt="Pesquisa">
            </button>
        </form>
    </section>
</header>