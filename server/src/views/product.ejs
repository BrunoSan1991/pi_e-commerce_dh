<%- include("./partials/head")%>
<%- include("./partials/header")%>

<main>
  <!-- Verificando se a variável user existe -->
  <% if(locals.product){%>

    <div class="productconfig">
      <div class="column1product">
        <div id="identification">
          <h1 class="product-name"><%= product.title %></h1>
          <h6>Marca: <%= product.brand %></h6>
          <h6>Formato: <%= product.format %></h6>
          <h6>Código: <%= product.sku %> </h6>
        </div>
        <section id="product-picture">
          <img class="coffee" src="/img/<%= product.image %>" alt="<%= product.title %>">
        </section>
      </div>
      <div class="column2product">
        <div id="about">
          <h1 class="price">R$ <%= product.price %></h1>
          <h6 class="price-options">10x 2,99 sem juros</h6>
          <form id="delivery" action="">
            <label for="shipping">Calcular frete</label>
            <input type="number" name="shipping" id="shipping" placeholder="00000-000">
          </form>
          <a href="">
            <button type="button" class="btn-edit-forms">Adicionar à sacola</button>
          </a>
          <h4 class="description">Descrição</h4>
          <p class="description2"><%= product.description %></p>
          <h4 class="content">Conteúdo</h4>
          <p class="content2"><%= product.content %></p>
        </div>
      </div>
    </div>
     
  <% } %>

<%- include("./partials/footer")%>