<%- include("./partials/head")%>
<%- include("./partials/header")%>

<body>
    <main id="main-admin-products">
            <h2 class="admin-products-add">Cadastro de Usuário Admin</h2>
            <div id="admin-products-bgc">
                <form id="admin-products-add-1" action="/admin/usuarios/cadastro" method="POST">

                    <% if (locals.error) { %>
                        <p class="alert-form"> <%= error.message %>  </p>
                    <% } %>

                    <% if (locals.errors) { %>
                        <p class="alert-form"> Existem campos no formulário que devem ser preenchidos </p>
                    <% } %>
                    
                    <div class="form-group">
                        <label for="first_name">Nome</label>
                        <input type="text" class="form-control" name="first_name" id="first_name" value="<%= locals.old ? old.first_name : '' %>">
                        <% if (locals.errors && errors.first_name) { %>
                            <p class="alert-form"> <%= errors.first_name %> </p>
                        <% } %>
                    </div>

                    <div class="form-group">
                        <label for="last_name">Sobrenome</label>
                        <input type="text" class="form-control" name="last_name" id="last_name" value="<%= locals.old ? old.last_name : '' %>">
                        <% if (locals.errors && errors.last_name) { %>
                            <p class="alert-form"> <%= errors.last_name %> </p>
                        <% } %>
                    </div>

                    <div class="form-group">
                        <label for="email">E-mail</label>
                        <input type="email" class="form-control" name="email" id="email" value="<%= locals.old ? old.email : '' %>">
                        <% if (locals.errors && errors.email) { %>
                            <p class="alert-form"> <%= errors.email %> </p>
                        <% } %>
                    </div>

                    <div class="form-group">
                        <label for="password">Senha</label>
                        <input type="password" class="form-control" name="password" id="password" value="<%= locals.old ? old.password : '' %>">
                        <% if (locals.errors && errors.password) { %>
                            <p class="alert-form"> <%= errors.password %> </p>
                        <% } %>
                    </div>

                    <div class="form-group">
                        <label for="confirm_password">Confirmar senha</label>
                        <input type="password" class="form-control" name="confirm_password" id="confirm_password" value="<%= locals.old ? old.confirm_password : '' %>">
                        <% if (locals.errors && errors.confirm_password) { %>
                            <p class="alert-form"> <%= errors.confirm_password %> </p>
                        <% } %>
                    </div>
                                        
                    <div class= "admin-product-btn text-center">
                            <button type="submit" class="btn-edit-forms">Cadastrar</button>
                    </div>
                </form>
            </div>            
    </main>
<%- include("./partials/scriptBootstrap")%>
</body>