<%- include("./partials/head")%>
<%- include("./partials/header")%>

<body>
    <main id="main-admin-products">
            <h1 class="admin-products-title">Painel do Administrador</h1>
            <h2 class="admin-products-add">Adicionar Produto</h2>
            <div id="admin-products-bgc">
                <form id="admin-products-add-1">
                    <input type="text" name="admin-product-name" id="admin-product-name" placeholder="Produto">
                    <input type="text" name="admin-product-code" id="admin-product-code" placeholder="Código">
                    <input type="text" name="admin-product-number" id="admin-product-number" placeholder="Quantidade">
                    <input type="text" name="admin-product-type" id="admin-product-type" placeholder="Tipo">
                    <input type="text" name="admin-product-weight" id="admin-product-weight" placeholder="Peso">
                </form>
                <div class= "admin-product-btn">
                    <a href="">
                        <button type="button" class="btn-edit-forms">Adicionar</button>
                    </a>
                </div>
            </div>
            <div id="admin-products-list">
                <% if(products.length>0){ %>
                    <table class="table-admin-products">
                        <thead>
                            <tr>
                                <th>Produto</th>
                                <th>Código</th>
                                <th>Quantidade</th>
                                <th>Categoria</th>
                                <th>Status</th>
                                <th>Ação</th>
                        </thead>
                        <tbody>
                            <!-- Trazendo os produtos cadastrados -->
                            <% for(let product of products){ %>
                                <tr>
                                    <td><%= product.title %></td>
                                    <td><%= product.sku %></td>
                                    <td><%= product.quantity %></td>
                                    <td><%= product.category %></td>
                                    <% if(product.active){ %>
                                        <td>Ativo</td>
                                    <% }else{ %>
                                        <td>Inativo</td>
                                    <% } %>
                                    <td class="admin-products-actions">
                                        <a href="/admin/produtos/<%= product.id %>">Visualizar</a>
                                        <a href="/admin/produtos/editar/<%= product.id %>">Editar</a>
                                        <a href="/admin/produtos/deletar<%= product.id %>">Excluir</a>
                                    </td>
                                </tr>
                            <% } %>                         
                        </tbody>
                    </table>
                <% }else{ %>
                    <h2>Nenhum produto encontrado.</h2>
                <% } %>

            </div>
    </main>
</body>