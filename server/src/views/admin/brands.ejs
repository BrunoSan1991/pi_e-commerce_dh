<%- include("./partials/head")%>
<%- include("./partials/header")%>

<body>
    <main id="main-admin-products">
            <h1 class="admin-products-title">Listagem de Marcas</h1>
            <a href="/admin/marcas">
                <button class="btn-edit-forms mt-5">Cadastrar marca</button>
            </a>
            <div id="admin-products-list">
                <% if(brands.length>0){ %>
                    <table class="table-admin-products">
                        <thead>
                            <tr>
                                <th>Marcas</th>  
                            </tr>                             
                        </thead>
                        <tbody>
                            <% for(let brand of brands){ %>
                                <tr>
                                    <td><%= brand.name %></td>                                    
                                </tr>
                            <% } %>                         
                        </tbody>
                    </table>
                <% }else{ %>
                    <h2>Nenhuma marca encontrada.</h2>
                <% } %>

            </div>
    </main>
<%- include("./partials/scriptBootstrap")%>
</body>