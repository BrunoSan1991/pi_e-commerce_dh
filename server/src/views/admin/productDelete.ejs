<%- include("./partials/head")%>
<%- include("./partials/header")%>

<body>
    <main id="main-admin-products">
        <% if(locals.product){ %>

            <h2 class="admin-products-add">Tem certeza que desejar inativar o produto abaixo?</h2>
            <p><%= product.name %> </p>
            <p><%= product.Brand.name %> </p>
            <p><%= product.flavor %> </p>
            <p><%= product.roast %> </p>
            <p><%= product.description %> </p>
            <p><%= product.content %> </p>
            <p><%= product.format %> </p>
            <p><%= product.price %> </p>
            <p><%= product.installment %> </p>
            <p><%= product.sku %> </p>
            <p><%= product.quantity %> </p>
            <p><%= product.Categories[0].name %> </p>
            <% if(product.active){ %>
                <p>Ativo</p>
            <% }else{ %>
                <p>Inativo</p>
            <% } %>
            <img src="/img/<%= product.ImageProducts[0].name %> " alt="">

            <form action="/admin/produtos/deletar/<%= product.id %>?_method=delete" method="post">
                <a href="/admin/produtos"><button class="btn-edit-forms" type="button">Não</button></a>
                <button class="btn-edit-forms" type="submit">Sim</button>
            </form>
        <% }else{ %>
            <h2>Produto não encontrado.</h2>
        <% } %>
    </main>
</body>