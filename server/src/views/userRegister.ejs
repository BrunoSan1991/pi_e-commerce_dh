<%- include("./partials/head")%>
<%- include("./partials/header")%>

<main>
	<section id="container-register">
		<div id="container-general-register">
			<div class="title-section">
				<h2>Crie sua conta</h2>
				<% if(locals.error){ %>
					<p class="error-alert"><%= error.message %></p>
				<% } %>
			</div>
			<form action="/registro" method="post" class="container-form-register">
				<div class="container-input">
					<label for="name-id">Nome</label>
					<div>
						<input type="text" name="nome" id="name-id" />
					</div>
				</div>

				<div class="container-input">
					<label for="last-name-id">Sobrenome</label>
					<div>
						<input type="text" name="sobrenome" id="last-name-id" />
					</div>
				</div>

				<div class="container-input">
					<label form="cpf-id">CPF</label>
					<div>
						<input type="text" name="cpf" id="cpf" placeholder="000.000.000-00" autocomplete="off" maxlength="14">
					</div>
				</div>

				<div class="container-input">
					<label for="email-id">E-mail</label>
					<div>
						<input type="email" name="email" id="email-id" />
					</div>
				</div>

				<div class="container-input">
					<label for="password-id">Senha</label>
					<div>
						<input type="password" name="senha" id="password-id" />
					</div>
				</div>

				<div class="container-input">
					<label for="confirm-password-id">Confirme sua senha</label>
					<div>
						<input type="password" name="confirmar_senha" id="confirm-password-id" />
					</div>
				</div>

				<div class="container-checkbox">
					<div class="container-checkbox">
						<input type="checkbox" name="agree" id="agree-id" required checked/>
						<label for="agree-id">Li e concordo com os termos</label>
					</div>
					<div class="container-checkbox">
						<input type="checkbox" name="newsletter" id="newsletter-id" />
						<label for="newsletter-id">Deseja receber notícias por e-mail?</label>
					</div>
				</div>
				<div class="container-btn-register">
					<button class="btn-edit-login" type="submit">Cadastrar</button>
				</div>
			</form>
			<div class="container-do-login">
				<a href="/login" class="underline-hover">Já tem conta? Faça o login.</a>
			</div>
		</div>
	</section>

	<%- include("./partials/footer")%>